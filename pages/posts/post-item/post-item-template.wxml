<template name="postItem"> 
    <view class="post-container">
        <view class="post-auther-date">
            <image class="post-auther" src="{{auther_img}}">
            </image>
            <text class="post-date">{{date}}</text>
        </view>
        <text class="post-title">{{title}}</text>
        <image class="post-image" src="{{post_img}}">
        </image>
        <text class="post-content">{{content}}
        </text>
        <view class="post-like">
            <image class="post-like-image" src="/images/chat.png"></image>
            <text class="post-like-font">{{auther_num}}</text>
            <image class="post-like-image" src="/images/view.png"></image>
            <text class="post-like-font">{{view_num}}</text>
        </view>
    </view>
</template>