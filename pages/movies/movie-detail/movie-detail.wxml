<import src="../stars/stars-template.wxml" />
<view class="container">
  <image src="{{movie.movieImg}}" class="head-img" mode="aspectFill"/>
  <view class="head-img-hover" >
    <text class="main-title">{{movie.title}}</text>
    <text class="sub-title">{{movie.country + "." + movie.year}}</text>
    <view class="like">
      <text class="highlight-font">{{movie.wishCount}}</text>
      <text class="plain-font">人喜欢</text>
      <text class="highlight-font">{{movie.commentCount}}</text>
      <text class="plain-font">条评论</text>
    </view>
  </view>
  <image class="movie-img" src="{{movie.movieImg}}" />
  <view class="summary">
    <view class="original-title">
      <text>{{movie.originalTitle}}</text>
    </view>
    <view class="flew-row">
      <text class="mark">评分</text>
      <template is="starsTemplate" data="{{stars:movie.stars, score:movie.score}}"/>
    </view>
    <view class="flew-row">
      <text class="mark">导演</text>
      <text>{{movie.director.name}}</text>
    </view>
    <view class="flew-row">
      <text class="mark">影人</text>
      <text>{{movie.casts}}</text>
    </view>
    <view class="flew-row">
      <text class="mark">类型</text>
      <text>{{movie.genres}}</text>
    </view>
  </view>

  <view class="hr"></view>
  <view class="synopsis">
    <text>剧情简介</text>
    <text class="sunmmary-content">{{movie.summary}}</text>
  </view><!--梗概-->
  <view class="hr"></view>

  <view class="cast">
    <text>影人</text>
    <scroll-view class="cast-imgs" scroll-x="true" style="width: 100%">
      <block wx:for="{{movie.castsInfo}}" wx:for-item="item">
        <view class="cast-container">
          <image src="{{item.img}}" class="cast-img"></image>
          <text class="cast-name">{{item.name}}</text>
        </view>
      </block>
    </scroll-view>
  </view>
</view>
